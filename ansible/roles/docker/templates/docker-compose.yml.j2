version: '3.8'

services:
  service1-nodejs:
    build: ./microservices/service1-nodejs
    ports:
      - "3000:3000"
  
  service2-python:
    build: ./microservices/service2-python
    ports:
      - "5000:5000"

  nginx:
    image: nginx:latest
    ports:
      - "80:80"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf
    depends_on:
      - service1-nodejs
      - service2-python
